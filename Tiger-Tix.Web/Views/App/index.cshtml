@page
@model LoginInfoViewModel

@{
    Layout = null;
    ViewBag.Title = "Tiger Tix Web Interface";
}

<!DOCTYPE html>

<html>
<head>
    <title>@ViewBag.Title</title>
</head>
<body>
<div>
    <p>Welcome to Tiger Tix!</p>
    <p>Please Login</p>
    @using (Html.BeginForm("Index", "App", FormMethod.Post))
    {
        <span>Username: </span>@Html.TextBoxFor(m => m.Username)<br/>
        <span>Password: </span>@Html.TextBoxFor(m => m.Password)<br/>
        <input type="submit" value="Login"/>
    }
</div>
</body>
</html>